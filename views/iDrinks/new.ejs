<% layout('layouts/boilerplate') %>
<div class="row">
  <h1 class="text-center">Új hirdetés</h1>
  <div class="col-md-6 offset-md-3">
    <div class="card shadow">
      <div class="card-body">
        <form
          action="/iDrinks"
          method="POST"
          novalidate
          class="validated-form"
          enctype="multipart/form-data"
        >
          <div class="mb-3">
            <label class="form-label" for="title">Hirdetés neve</label>
            <input
              class="form-control"
              type="text"
              id="title"
              name="iDrink[title]"
              required
            />
            <div class="valid-feedback">Minden stimmel!</div>
          </div>
          <div class="mb-3">
            <label class="form-label" for="location">Helyszín</label>
            <input
              class="form-control"
              type="text"
              id="location"
              name="iDrink[location]"
              required
            />
            <div class="valid-feedback">Minden stimmel!</div>
          </div>
          <div class="mb-3">
            <label class="form-label" for="price">Ár</label>
            <div class="input-group">
              <span class="input-group-text" id="price-label">Ft</span>
              <input
                type="text"
                class="form-control"
                id="price"
                placeholder="0.00"
                aria-label="price"
                aria-describedby="price-label"
                name="iDrink[price]"
                required
              />
              <div class="valid-feedback">Minden stimmel!</div>
            </div>
          </div>
          <div class="input-group mb-3">
            <input
              type="file"
              class="form-control"
              name="image"
              id="image"
              multiple
            />
          </div>
          <div class="mb-3">
            <label class="form-label" for="description">Leírás</label>
            <textarea
              class="form-control"
              type="text"
              id="description"
              name="iDrink[description]"
              required
            ></textarea>
            <div class="valid-feedback">Minden stimmel!</div>
          </div>
          <div class="mb-3">
            <button class="btn btn-success">Létrehozás</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
